<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorPrimaryInverse">@color/textColorInverse</item>
        <item name="cardBackgroundColor">@color/cardBackgroundColor</item>
        <item name="cardBackgroundColorInverse">@color/cardBackgroundColorInverse</item>
        <item name="buttonBackgroundColor">@color/buttonBackgroundColor</item>
        <item name="buttonBackgroundColorInverse">@color/buttonBackgroundColorInverse</item>
        <item name="buttonDisabledBackgroundColor">@color/buttonDisabledBackgroundColor</item>
        <item name="buttonDisabledBackgroundColorInverse">
            @color/buttonDisabledBackgroundColorInverse
        </item>

    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryInverse</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInverse</item>
        <item name="colorAccent">@color/colorAccentInverse</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">@color/textColorInverse</item>
        <item name="android:textColorPrimaryInverse">@color/textColor</item>
        <item name="cardBackgroundColor">@color/cardBackgroundColorInverse</item>
        <item name="cardBackgroundColorInverse">@color/cardBackgroundColor</item>
        <item name="buttonBackgroundColor">@color/cardBackgroundColor</item>
        <item name="buttonBackgroundColorInverse">@color/buttonBackgroundColor</item>
        <item name="buttonDisabledBackgroundColor">@color/buttonDisabledBackgroundColorInverse
        </item>
        <item name="buttonDisabledBackgroundColorInverse">@color/buttonDisabledBackgroundColor
        </item>
    </style>

    <style name="CategoryFontTheme">

        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">Category</item>
        <item name="android:layout_margin">20dp</item>

    </style>

    <style name="cardTheme">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="triviaFontTheme">

        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">center</item>


    </style>

    <style name="queryFontTheme">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:hint">@string/hint</item>
        <item name="android:inputType">numberPassword</item>

    </style>

    <style name="fontTheme">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">30sp</item>


    </style>

    <style name="randomButtonTheme">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:text">Random</item>
        <item name="android:layout_marginBottom">10dp</item>

        <item name="android:layout_marginTop">20dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_material</item>

    </style>

    <style name="specificButtonTheme">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:text">Specific</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_material</item>

    </style>

    <style name="submitButtonTheme">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_material</item>

    </style>

    <style name="shareButtonTheme">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">30dp</item>

    </style>

    <style name="buttonTheme">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_material</item>

    </style>


</resources>

